<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/favcontent"
        android:layout_width="match_parent"
        android:layout_height="350dp">


    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#6d6d6d">

        <ImageView
            android:id="@+id/favbookimage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/bookappicon"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="15dp"/>


    </LinearLayout>

    <TextView
        android:id="@+id/favbookname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout"
        android:text="Hello World"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/favbookauthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favbookname"
        android:text="Name of author"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"/>

    <TextView
        android:id="@+id/favbookprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favbookauthor"
        android:text="RS 299"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"/>

    <TextView
        android:id="@+id/favbookrating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favbookprice"
        android:text="4.5"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:drawableLeft="@drawable/ic_star"
        android:drawablePadding="10dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>